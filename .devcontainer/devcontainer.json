{
  "name": "GoodMem DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
  },
  // Assumes final_installer.sh is in the workspace root and is executable
  "postCreateCommand": "bash -lc './final_installer.sh --debug-install --no-openai-embedder-registration'",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-docker"
      ]
    }
  },
  "mounts": [
    "source=goodmem-data,target=/var/lib/goodmem,type=volume"
  ],
  "remoteUser": "vscode",
  "runArgs": ["--privileged"]
}
