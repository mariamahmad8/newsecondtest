{
  "name": "GoodMem Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "bash ./.devcontainer/final_installer.sh --debug-install --no-openai-embedder-registration && echo \"alias install-goodmem='bash ./.devcontainer/final_installer.sh'\" >> ~/.bashrc && echo \"alias install-goodmem='bash ./.devcontainer/final_installer.sh'\" >> ~/.zshrc",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-docker"
      ]
    }
  },
  "mounts": [
    "source=goodmem-data,target=/var/lib/goodmem,type=volume"
  ],
  "remoteUser": "vscode",
  "runArgs": ["--privileged"]
}
